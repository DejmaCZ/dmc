{# templates/browser/breadcrumb.html.twig #}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="{{ path('app_browser_media', {'mediaId': media.id}) }}">
                <i class="bi bi-house-door"></i> Root
            </a>
        </li>
        
        {% if directory_path is defined and directory_path is not empty %}
            {% for dir in directory_path %}
                {% if loop.last %}
                    <li class="breadcrumb-item active" aria-current="page">
                        {{ dir.name }}
                    </li>
                {% else %}
                    <li class="breadcrumb-item">
                        <a href="{{ path('app_browser_media', {'mediaId': media.id, 'directory': dir.id}) }}">
                            {{ dir.name }}
                        </a>
                    </li>
                {% endif %}
            {% endfor %}
        {% endif %}
    </ol>
</nav>